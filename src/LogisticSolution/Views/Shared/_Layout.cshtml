<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/fontawesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand">
                    <img height="25" width="25" src="~/images/ls.png" />
                </a>
                <a class="navbar-brand" href="#">Logistic Solution </a>
            </div>
            <div class="nav navbar-nav navbar-right">
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-success">SignIn</button>
                </form>
            </div>

        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container">
            <p class="text-muted">Logistic Solution by -Vinay Joshi : Version Number : 1.0.0.0</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</body>
</html>
